<mui:ModernWindow x:Class="ModernUI.Xceed.Toolkit.Example.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mui="http://firstfloorsoftware.com/ModernUI"
                  ContentSource="Pages/About.xaml"
                  WindowStartupLocation="CenterScreen"
                  Title="ModernUI.Xceed.Toolkit Example" Height="480" Width="600">

    <mui:ModernWindow.TitleLinks>
        <mui:Link DisplayName="License" Source="Pages/License.xaml" />
        <mui:Link DisplayName="Help" Source="https://github.com/samoatesgames/mui.extended.toolkit" />
    </mui:ModernWindow.TitleLinks>

    <mui:ModernWindow.MenuLinkGroups>
        <mui:LinkGroup DisplayName="ModernUI.Xceed.Toolkit">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="About" Source="Pages/About.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
        <mui:LinkGroup DisplayName="Controls">
            <mui:LinkGroup.Links>
                <mui:Link Source="Pages/ControlsRoot.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>

</mui:ModernWindow>